#include<iostream>
using namespace std;
int main()
{
    int i=1,N,j,k,val=1,m,b=0;
    cin>>N;
    while(i<=N)
    {
        k=1;
        while(k<=N-i)
        {
            cout<<" ";
            k=k+1;
        }
        j=i;
        while(j<=val)
        {
            cout<<j;
            j=j+1;
        }
        val=val+2;
            m=2*i-2;
        while(m>1 && m>b)
        {
            cout<<m;
            m=m-1;
        }
        cout<<endl;
        i=i+1;
        b=b+1;
    }
    
    
}
