#include<iostream>
using namespace std;


int main(){

       /*  Read input as specified in the question.
	* Print output as specified in the question.
	*/
  
int sum=0,i=1,N;
    cin>>N;
    while(i<=N)
    {
        if(i%2==0)
        {
            sum=sum+i;
        }
        i=i+1;
    }
    cout<<sum;
}

