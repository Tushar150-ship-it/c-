#include <iostream>
using namespace std;

int main() {
    /*  Read input as specified in the question.
     * Print output as specified in the question.
     */
    int i=1,j,N,k=1,val=1;
    cin>>N;
    while(i<=N)
    {
        j=1;
        k=1;
        while(k<=N-i)
        {
         cout<<" ";
            k=k+1;
        }
        
        while(j<=val)
        {
         cout<<"*";
        j=j+1;
        }
        val=val+2;
        cout<<endl;
        i=i+1;
    }
}
