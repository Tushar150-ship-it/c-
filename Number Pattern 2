#include<iostream>
using namespace std;


int main(){

       /*  Read input as specified in the question.
	* Print output as specified in the question.
	*/
 int i,N,j,val=1,k=1;
    cin>>N;
    i=1;
    
    while(i<=N)
    {
        k=1;
        while(k<=N-i)
        {
            cout<<" ";
            k=k+1;
        }
     j=i;
        while(j<=val)
        {
            cout<<j;
                j=j+1;
        }
        val=val+2;
        cout<<endl;
        i=i+1;
    }
}


