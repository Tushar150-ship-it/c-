#include <iostream>
using namespace std;
int main()
{
int i=1,N,n1,n2,k=1,m,val=1;
cin>>N;
n1=(N+1)/2;

int j=1;

while(i<=n1)
{
    k=1;
while(k<=n1-i)
{
    cout<<" ";
    k=k+1;
}
j=1;
while(j<=val)
{
    cout<<"*";
    j=j+1;
}
val=val+2;

cout<<endl;
    i=i+1;
}
int o,e,l;
n2=N/2;
i=1;
int t=1;
while(n2>=1)
{
    o=1;
    while(o<=t)
    {
        cout<<" ";
        o=o+1;
    }
    l=1;
    while(l<=((2*n2)-1))
    {
        cout<<"*";
        l=l+1;
    }
    cout<<endl;
    n2=n2-1;
    t=t+1;
}


    return 0;
}
